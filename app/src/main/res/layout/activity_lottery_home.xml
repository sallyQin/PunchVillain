<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/btn2_btn2_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:text="新年财运签"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#EEB422"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn2_btn2_title"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.apc.punchvillain.LampFrameLotteryView
            android:id="@+id/frame_lottery"
            android:background="@drawable/lottery_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.example.apc.punchvillain.LotteryView
            android:id="@+id/lottery_lots"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>
